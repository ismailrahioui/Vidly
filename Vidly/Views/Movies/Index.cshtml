@model IEnumerable<Vidly.Models.Movie>

@{
ViewBag.Title = "Index";
Layout = "~/Views/Shared/_Layout.cshtml";
}



<div id="container">

	

	<button type="button" class="btn btn-success m-5 "><i class="fa-solid fa-plus me-2"></i> <a href="/movies/create" class="text-white" style="text-decoration:none">Create New Movie Or Event  </a></button>




	<table class="table table-bordered table-hover" id="movies">
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Genre.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.GenreSection.Name)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MovieName)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MovieImg)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MovieDic)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MovieDescription)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Datesortie)
			</th>
			<th></th>
		</tr>

		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Genre.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.GenreSection.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MovieName)
				</td>
				<td>
					<img src="~/Uploads/@Html.DisplayFor(m=>item.MovieImg)" class="thumbnail" style="width:100px;height:100px" />
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MovieDic)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MovieDescription)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Datesortie)
				</td>
				<td>
					@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
					@Html.ActionLink("Details", "Details", new { id = item.Id ,@class="js-delete"})
					
					@Html.ActionLink("Delete", "Delete", new { id = item.Id })
				</td>
			</tr>
		}

	</table>

</div>
 
					
	
@section scripts
{
<script>
	$("#movies").DataTable();
</script>	
}