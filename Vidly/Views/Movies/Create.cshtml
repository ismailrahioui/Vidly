@model Vidly.Models.Movie
@using (Html.BeginForm("Create", "Movies", FormMethod.Post, new { enctype = "Multipart/form-data" }))
{
	@Html.AntiForgeryToken()
	<div class="container d-flex justify-content-center align-items-center min-vh-100">
		<div class="row rounded rounded-5 p-3 bg-white shadow box-area">
			<div class="col-md-6">
				@Html.LabelFor(model => model.MovieName, htmlAttributes: new { @class = "control-label " })
				<div class="mb-3">
					@Html.EditorFor(model => model.MovieName, new { htmlAttributes = new { @class = "form-control", placeholder = "Movie Or Event Name " } })
					@Html.ValidationMessageFor(model => model.MovieName, "", new { @class = "text-danger" })
				</div>
				<div class="mb-3">
					@Html.LabelFor(model => model.MovieImg, htmlAttributes: new { @class = "control-label " })
					<input type="file" name="upload" class="form-control" />
					@Html.ValidationMessageFor(model => model.MovieImg, "", new { @class = "text-danger" })
				</div>
				@Html.LabelFor(model => model.MovieDic, htmlAttributes: new { @class = "control-label " })
				<div class="col-md-10">
					@Html.EditorFor(model => model.MovieDic, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.MovieDic, "", new { @class = "text-danger" })
				</div>
				@Html.LabelFor(model => model.MovieDescription, htmlAttributes: new { @class = "control-label " })
				<div class="col-md-10">
					@Html.EditorFor(model => model.MovieDescription, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.MovieDescription, "", new { @class = "text-danger" })
				</div>
				@Html.LabelFor(model => model.Datesortie, htmlAttributes: new { @class = "control-label " })
				<div class="col-md-10">
					@Html.EditorFor(model => model.Datesortie, new { htmlAttributes = new { @class = "form-control" } })
					@Html.ValidationMessageFor(model => model.Datesortie, "", new { @class = "text-danger" })
				</div>
				@Html.LabelFor(model => model.GenreId, "Movie OR Event Genre", htmlAttributes: new { @class = "control-label " })
				<div class="col-md-10">
					@Html.DropDownList("GenreId", null, htmlAttributes: new { @class = "form-select" })
					@Html.ValidationMessageFor(model => model.GenreId, "", new { @class = "text-danger" })
				</div>
				@Html.LabelFor(model => model.GenreSectionId, "Movie or Event Schedule", htmlAttributes: new { @class = "control-label " })
				<div class="col-md-10">
					@Html.DropDownList("GenreSectionId", null, htmlAttributes: new { @class = "form-select" })
					@Html.ValidationMessageFor(model => model.GenreSectionId, "", new { @class = "text-danger" })
				</div>
				<div class="form-group">
					<div class="col-md-offset-2 col-md-10 mt-4 ">
						<input type="submit" value="Create" class="btn btn-success w-100" />
					</div>
				</div>
			</div>
		</div>
	</div>
}






	

























































