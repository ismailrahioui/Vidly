@model IEnumerable<Vidly.Models.GenreSection>

@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="swiper mySwiper">
	<div class="swiper-wrapper">
		@foreach (var item in Model)
		{
			foreach (var subitem in item.Movies)
			{
				<div class="swiper-slide">

					<img src="~/Uploads/@Html.DisplayFor(m=>subitem.MovieImg)" />
					<div class="carousel-caption ">
						<h5>@Html.DisplayFor(m=>subitem.MovieName)</h5>
						<p>Au cinema le @Html.DisplayFor(m => subitem.Datesortie)</p>
						@*<button class="btn btn-danger">Book me <i class="bi bi-ticket-detailed-fill"></i></button>*@
					</div>

				</div>
			}

		}
	</div>
	<div class="swiper-button-next"></div>
	<div class="swiper-button-prev"></div>
	<div class="swiper-pagination"></div>
</div>
<div id="container_2">
	@foreach (var item in Model)
	{

		if (item.Name == "Morning")
		{
			<h1 id="h1">@Html.DisplayFor(m => item.Name)</h1>
			<div class="row ">
				@foreach (var subitem in item.Movies)
				{
					<div class="col-md-3 mt-4">
						<img src="~/Uploads/@Html.DisplayFor(m=>subitem.MovieImg)" class="img-thumbnail m-5 " style="width:300px;height:390px" />
						

					</div>
				}


			</div>
		}

	}

</div>
<div id="container_2">
	@foreach (var item in Model)
	{

		if (item.Name == "Mid Day")
		{
			<h1 id="h1">@Html.DisplayFor(m => item.Name)</h1>
			<div class="row ">
				@foreach (var subitem in item.Movies)
				{
					<div class="col-md-4">
						<img src="~/Uploads/@Html.DisplayFor(m=>subitem.MovieImg)" class="img-thumbnail m-5 " style="width:300px;height:390px" />

					</div>
				}


			</div>
		}

	}

</div>
<div id="container_2">
	@foreach (var item in Model)
	{

		if (item.Name == "Night")
		{
			<h1 id="h1">@Html.DisplayFor(m => item.Name)</h1>
			<div class="row ">
				@foreach (var subitem in item.Movies)
				{
					<div class="col-md-4">
						<img src="~/Uploads/@Html.DisplayFor(m=>subitem.MovieImg)" class="img-thumbnail m-5 " style="width:300px;height:390px" />

					</div>
				}


			</div>
		}

	}

</div>


@section scripts
	{
	<script>
		var swiper = new Swiper(".mySwiper", {
			spaceBetween: 30,
			loop: true,
			centeredSlides: true,
			autoplay: {
				delay: 7500,
				disableOnInteraction: false,
			},
			pagination: {
				el: ".swiper-pagination",
				clickable: true,
			},
			navigation: {
				nextEl: ".swiper-button-next",
				prevEl: ".swiper-button-prev",
			},
		});
	</script>

}





































